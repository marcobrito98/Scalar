## Run termination
#################################################################################

TerminationTrigger::max_walltime = 6
# Trigger termination 30 minutes before the walltime is reached
TerminationTrigger::on_remaining_walltime        = 20
TerminationTrigger::output_remtime_every_minutes = 30
